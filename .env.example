# PostgreSQL connection string (required when using database storage).
# When set, the app stores plans in PostgreSQL instead of browser localStorage.
# Example for Dokploy: set this in your app's environment variables.
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public"

# NextAuth (required for auth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-string-e.g-openssl-rand-base64-32"

# Microsoft Entra ID (Azure AD) SSO – optional; if not set, only backup login is available.
# AZURE_AD_CLIENT_ID=
# AZURE_AD_CLIENT_SECRET=
# AZURE_AD_TENANT_ID=common

# Backup login – when SSO is down you can sign in with this email and password.
# Requires DATABASE_URL (user record is created on first backup sign-in).
BACKUP_ADMIN_EMAIL="your-email@example.com"
BACKUP_ADMIN_PASSWORD="your-secure-password"
